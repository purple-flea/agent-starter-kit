# ============================================================
# Purple Flea — AI Agent Money Stack
# Copy this file to .env and fill in your values.
# Get API keys at: https://purpleflea.com/dashboard
# ============================================================

# Your Purple Flea API key (all products use the same key)
PURPLEFLEA_API_KEY=your_api_key_here

# Referral code — keep this to earn commissions and get 3 months free
PURPLEFLEA_REFERRAL_CODE=STARTER

# ============================================================
# API Endpoints (pre-configured, no changes needed)
# ============================================================

PURPLEFLEA_WALLET_API=https://wallet.purpleflea.com/api/v1
PURPLEFLEA_TRADING_API=https://trading.purpleflea.com/api/v1
PURPLEFLEA_CASINO_API=https://casino.purpleflea.com/api/v1
PURPLEFLEA_DOMAINS_API=https://domains.purpleflea.com/api/v1

# ============================================================
# MCP Server Settings
# ============================================================

PURPLEFLEA_WALLET_MCP_PACKAGE=@purpleflea/wallet-mcp
PURPLEFLEA_TRADING_MCP_PACKAGE=@purpleflea/trading-mcp
PURPLEFLEA_CASINO_MCP_PACKAGE=@purpleflea/casino-mcp
PURPLEFLEA_DOMAINS_MCP_PACKAGE=@purpleflea/domains-mcp

# ============================================================
# Optional: Your LLM provider (for the full_agent.py example)
# ============================================================

OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================
# Optional: Webhook for agent notifications
# ============================================================

AGENT_WEBHOOK_URL=https://your-server.com/webhook
